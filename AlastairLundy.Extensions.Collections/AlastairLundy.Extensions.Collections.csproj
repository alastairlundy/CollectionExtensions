      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="AlastairLundy.Extensions.System" Version="[5.4.0, 6.0.0)" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All"/>
